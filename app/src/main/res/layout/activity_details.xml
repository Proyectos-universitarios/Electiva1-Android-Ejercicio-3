<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DetailsActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:paddingTop="20sp">
        <TextView
                android:text="Departamento: {@@}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/txtDepa" android:height="30sp"
                android:textStyle="bold"/>
        <TextView
                android:text="Municipio: {@@}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/txtMuni" android:height="30sp"
                android:textStyle="bold"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>